{
    "name": "${CS_POLICY_NAME}",
    "description": "Policy for Playground",
    "default": {
        "rules": [
            {
                "action": "log",
                "mitigation": "log",
                "type": "podSecurityContext",
                "enabled": false,
                "statement": {
                    "properties": [
                        {
                            "key": "runAsNonRoot",
                            "value": "false"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "podSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "hostNetwork",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "podSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "hostIPC",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "podSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "hostPID",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "containerSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "runAsNonRoot",
                            "value": "false"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "containerSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "privileged",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "containerSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "allowPrivilegeEscalation",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "containerSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "readOnlyRootFilesystem",
                            "value": "false"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "podexec",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "podExec",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "portforward",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "podPortForward",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "unscannedImage",
                "enabled": true
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "malware",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "count",
                            "value": "0"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "podexec",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "podExec",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "portforward",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "podPortForward",
                            "value": "true"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "containerSecurityContext",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "capabilities-rule",
                            "value": "baseline"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "vulnerabilities",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "max-severity",
                            "value": "high"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "contents",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "max-severity",
                            "value": "high"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "checklists",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "max-severity",
                            "value": "high"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "registry",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "not-equals",
                            "value": "${REGISTRY}"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "tag",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "equals",
                            "value": "latest"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "cvssAttackVector",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "cvss-attack-vector",
                            "value": "network"
                        },
                        {
                            "key": "max-severity",
                            "value": "medium"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "cvssAttackComplexity",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "cvss-attack-complexity",
                            "value": "low"
                        },
                        {
                            "key": "max-severity",
                            "value": "medium"
                        }
                    ]
                }
            },
            {
                "action": "block",
                "mitigation": "log",
                "type": "cvssAvailability",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "cvss-availability",
                            "value": "high"
                        },
                        {
                            "key": "max-severity",
                            "value": "medium"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "checklistProfile",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "checklist-profile",
                            "value": "pci-dss"
                        },
                        {
                            "key": "max-severity",
                            "value": "high"
                        }
                    ]
                }
            }
        ],
        "exceptions": [
            {
                "action": "log",
                "mitigation": "log",
                "type": "imagePath",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "equals",
                            "value": "docker.io/mawinkler/demo-magic:latest"
                        }
                    ]
                }
            },
            {
                "action": "log",
                "mitigation": "log",
                "type": "imagePath",
                "enabled": true,
                "statement": {
                    "properties": [
                        {
                            "key": "equals",
                            "value": "docker.io/ubuntu:latest"
                        }
                    ]
                }
            }
        ]
    },
    ${RULESETS_JSON}
}
